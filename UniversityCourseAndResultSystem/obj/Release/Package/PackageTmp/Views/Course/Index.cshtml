@model UniversityCourseAndResultSystem.Models.Course
@{
    ViewBag.Title = "Save Course";
}
<div class="container MarginTop50">
    <h2 style="background-color: Highlight;color: white; text-align: center; font-style: oblique">SAVE COURSE</h2>
    <div class="col-md-offset-1 col-md-10">
        <div class="middlleAlign">


            @using (Html.BeginForm(null, null, FormMethod.Post))
    {

        <div class="col-md-6" style="width: 100%">

            @Html.LabelFor(x => x.CourseCode, htmlAttributes: new { @class = "control-label col-md-4" })
            @Html.TextBoxFor(x => x.CourseCode, htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(x => x.CourseCode, "", new { @class = "text-danger" })
            <br />
            @Html.LabelFor(x => x.CourseName, htmlAttributes: new { @class = "control-label col-md-4" })
            @Html.TextBoxFor(x => x.CourseName, htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(x => x.CourseName, "", new { @class = "text-danger" })
            <br />
            @Html.LabelFor(x => x.CourseCredit, htmlAttributes: new { @class = "control-label col-md-4" })
            @Html.TextBoxFor(x => x.CourseCredit, htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(x => x.CourseCredit, "", new { @class = "text-danger" })
            <br />
            @Html.LabelFor(x => x.CourseDescription, htmlAttributes: new { @class = "control-label col-md-4" })
            @Html.TextAreaFor(x => x.CourseDescription, htmlAttributes: new { @class = "form-control" })


            @Html.LabelFor(x => x.DepartmentId, htmlAttributes: new { @class = "control-label col-md-3" })
            @Html.DropDownListFor(x => x.DepartmentId, new SelectList(ViewBag.Departments, "Value", "Text"), htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(x => x.DepartmentId, "", new { @class = "text-danger" })


            @Html.LabelFor(x => x.SemesterId, htmlAttributes: new { @class = "control-label col-md-3" })
            @Html.DropDownListFor(x => x.SemesterId, new SelectList(ViewBag.Semesters, "Value", "Text"), htmlAttributes: new { @class = "form-control" })
            <span>@Html.ValidationMessageFor(x => x.SemesterId, "", new { @class = "text-danger" }) </span><br />

        </div>


        <p align="right" style="margin-right:5px">
            <button class="btn btn-success">Save</button>

        </p>

}
            <h4 style="background-color: Yellow;color: green; text-align: center; font-style: oblique">@ViewBag.Message</h4>
        </div>
        </div> 
</div>
@{
    if (@ViewBag.Message != "")
    {
        <script language="javascript">
                    alert(@ViewBag.Message);
        </script>
    }

}


