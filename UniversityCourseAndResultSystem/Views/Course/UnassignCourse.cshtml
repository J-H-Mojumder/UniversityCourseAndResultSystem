@{
    ViewBag.Title = "Unassign all Courses";
}
<script type="text/javascript">
    function UnassignCourse() {
        var ans = confirm("Are You Sure to Unassign all Courses?");
        if (ans === true) {
            return true;
        } else {
            return false;
        }
    }

</script>
<div class="container MarginTop100">
    <h3 style="background-color: Highlight;color: white; text-align: center; font-style: oblique">UNASSIGN ALL COURSES</h3>
    <div class="col-md-offset-3 col-md-6">
        <div class="middlleAlign">

            <br />
            @using (Html.BeginForm(null, null, FormMethod.Post, new { onsubmit = "return UnassignCourse()" }))
            {

                <p align="center">
                    <input type="submit" id="unAssignCourse" class="btn btn-success" name="unAssignCourse" value="Unassign Courses">
                </p>


            }

        </div>
    </div>
    @*<h4 style="background-color: Yellow;color: green; text-align: center; font-style: oblique">@ViewBag.Message</h4>*@

</div>

 
@{
    if (@ViewData["Message"] != "")
    {
        <script language="javascript">
            alert('@ViewData["Message"]');
        </script>
    }
}

